<div id="contact" class="">
  <h2 class="text-4xl text-right bg-pink-200 mb-8 p-4">Contact Me</h2>
  <form class="container mx-auto px-2 mb-8" action="https://formspree.io/tiffanyhootontherapy@protonmail.com" method="POST">
    <div class="flex items-center bg-pink-200 rounded-lg my-4 shadow-lg">
      <label class="text-right ml-auto mr-2 font-bold w-1/2 md:w-1/3" for="name">Preferred Name</label>
      <input type="text" class="mr-auto bg-pink-100 w-full pl-2 py-4 rounded-lg" name="name" id="name" placeholder="Your Preferred Name" required />
    </div>
    <div class="flex items-center bg-pink-200 rounded-lg my-4 shadow-lg">
      <label class="text-right ml-auto mr-2 font-bold w-1/2 md:w-1/3" for="email">Email Address</label>
      <input type="email" class="mr-auto bg-pink-100 w-full pl-2 py-4 rounded-lg" id="email" name="_replyto" placeholder="name@example.com" />
    </div>
    <div class="flex items-center bg-pink-200 rounded-lg my-4 shadow-lg">
      <label class="text-right ml-auto mr-2 font-bold w-1/2 md:w-1/3" for="phone">Phone Number</label>
      <input type="tel" class="mr-auto bg-pink-100 w-full pl-2 py-4 rounded-lg" id="phone" name="phone" placeholder="111-222-3333" required />
    </div>
    <div class="flex flex-col items-center md:flex-row md:items-start bg-pink-200 rounded-lg my-4 shadow-lg">
      <label class="p-4 font-bold text-right md:text-left" for="message">Include a brief message to Tiffany.<br /></br /><span class="font-normal">Please do not include any protected health information.<span></label>
      <textarea class="bg-pink-100 w-full pl-2 py-4 rounded-lg" id="message" name="message" rows="6" cols="12" placeholder="Write your message here."></textarea>
    </div>
    <input type="submit" class="block p-4 bg-pink-200 font-bold w-1/2 hover:bg-pink-100 shadow-lg rounded-lg border-2 border-pink-200 border-solid cursor-pointer" value="Send" />
  </form>
</div>
